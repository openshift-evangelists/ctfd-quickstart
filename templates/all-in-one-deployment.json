{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "ctfd-all-in-one-deployment"
    },
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "value": "ctfd",
            "required": true
        },
        {
            "name": "GIT_REPOSITORY_URL",
            "value": "https://github.com/CTFd/CTFd",
            "required": true
        },
        {
            "name": "GIT_REFERENCE",
            "value": "1.2.0",
            "required": true
        },
        {
            "name": "MOD_WSGI_PROCESSES",
            "value": "1",
            "required": true
        },
        {
            "name": "MOD_WSGI_THREADS",
            "value": "5",
            "required": true
        },
        {
            "name": "REDIS_PASSWORD",
            "from": "[a-zA-Z0-9]{16}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "MYSQL_USER",
            "from": "user[A-Z0-9]{3}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "MYSQL_PASSWORD",
            "from": "[a-zA-Z0-9]{16}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "MYSQL_ROOT_PASSWORD",
            "from": "[a-zA-Z0-9]{16}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "MYSQL_DATABASE",
            "required": true,
            "value": "ctfd"
        },
        {
            "name": "SECRET_KEY",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{48}",
            "required": true
        },
        {
            "name": "DATA_VOLUME_SIZE",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "BUILD_POD_MEMORY_LIMIT",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "CTFD_MEMORY_LIMIT",
            "value": "256Mi",
            "required": true
        },
        {
            "name": "REDIS_MEMORY_LIMIT",
            "value": "256Mi",
            "required": true
        },
        {
            "name": "MYSQL_MEMORY_LIMIT",
            "value": "512Mi",
            "required": true
        },
        {
            "name": "PYTHON_VERSION",
            "value": "3.6",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "resources": {
                    "limits": {
                        "memory": "${BUILD_POD_MEMORY_LIMIT}"
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${GIT_REPOSITORY_URL}",
                        "ref": "${GIT_REFERENCE}"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "python:${PYTHON_VERSION}"
                        },
                        "scripts": "https://raw.githubusercontent.com/openshift-evangelists/ctfd-quickstart/master/s2i/bin"
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "ctfd:latest"
                    }
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-data",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${DATA_VOLUME_SIZE}"
                    }
                }
            }
        },
	{
	    "kind": "ServiceAccount",
	    "apiVersion": "v1",
	    "metadata": {
		"name": "${APPLICATION_NAME}-app",
		"labels": {
		    "app": "${APPLICATION_NAME}"
		}
	    },
            "automountServiceAccountToken": false
	},
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "ctfd"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "ctfd:latest"
                            }
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "redis"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "openshift",
                                "name": "redis:3.2"
                            }
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "mysql"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "openshift",
                                "name": "mysql:5.7"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APPLICATION_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${APPLICATION_NAME}-app",
                        "automountServiceAccountToken": false,
                        "containers": [
                            {
                                "name": "ctfd",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${CTFD_MEMORY_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "SECRET_KEY",
                                        "value": "${SECRET_KEY}"
                                    },
                                    {
                                        "name": "REDIS_URL",
                                        "value": "redis://:${REDIS_PASSWORD}@localhost:6379"
                                    },
                                    {
                                        "name": "DATABASE_URL",
                                        "value": "mysql+pymysql://${MYSQL_USER}:${MYSQL_PASSWORD}@localhost:3306/ctfd"
                                    },
                                    {
                                        "name": "UPLOAD_FOLDER",
                                        "value": "/var/uploads"
                                    },
                                    {
                                        "name": "LOG_FOLDER",
                                        "value": "/var/logs/CTFd"
                                    },
                                    {
                                        "name": "MOD_WSGI_PROCESSES",
                                        "value": "${MOD_WSGI_PROCESSES}"
                                    },
                                    {
                                        "name": "MOD_WSGI_THREADS",
                                        "value": "${MOD_WSGI_THREADS}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "data",
                                        "mountPath": "/var/uploads",
                                        "subPath": "uploads"
                                    },
                                    {
                                        "name": "data",
                                        "mountPath": "/var/logs/CTFd",
                                        "subPath": "logs"
                                    }
                                ]
                            },
                            {
                                "name": "redis",
                                "ports": [
                                    {
                                        "containerPort": 6379,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${REDIS_MEMORY_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "REDIS_PASSWORD",
                                        "value": "${REDIS_PASSWORD}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "data",
                                        "mountPath": "/var/lib/redis/data",
                                        "subPath": "redis"
                                    }
                                ]
                            },
                            {
                                "name": "mysql",
                                "ports": [
                                    {
                                        "containerPort": 3306,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${MYSQL_MEMORY_LIMIT}"
                                    }
                                },
                                "env": [
                                    {
                                        "name": "MYSQL_USER",
                                        "value": "${MYSQL_USER}"
                                    },
                                    {
                                        "name": "MYSQL_PASSWORD",
                                        "value": "${MYSQL_PASSWORD}"
                                    },
                                    {
                                        "name": "MYSQL_ROOT_PASSWORD",
                                        "value": "${MYSQL_ROOT_PASSWORD}"
                                    },
                                    {
                                        "name": "MYSQL_DATABASE",
                                        "value": "${MYSQL_DATABASE}"
                                    }
                                ],
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "MYSQL_PWD=\"$MYSQL_PASSWORD\" mysql -h 127.0.0.1 -u $MYSQL_USER -D $MYSQL_DATABASE -e 'SELECT 1'"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1
                                },
                               "livenessProbe": {
                                    "initialDelaySeconds": 30,
                                    "tcpSocket": {
                                        "port": 3306
                                    },
                                    "timeoutSeconds": 1
                                },
                                "volumeMounts": [
                                    {
                                        "name": "data",
                                        "mountPath": "/var/lib/mysql/data",
                                        "subPath": "mysql"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "data",
                                "persistentVolumeClaim": {
                                    "claimName": "${APPLICATION_NAME}-data"
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "${APPLICATION_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "type": "ClusterIP"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                }
            }
        }
    ]
}
